# App metadata
APP_TITLE="Surat Event Info Assistant API"
APP_DESCRIPTION="API that accepts email-like queries about recent Surat events, performs web search, and returns an AI-generated reply with brief citations."
APP_VERSION="0.1.0"

# API prefix
API_PREFIX="/api/v1"

# CORS (comma-separated)
CORS_ALLOW_ORIGINS="*"

# LLM (OpenAI)
# Required to enable AI reply synthesis:
OPENAI_API_KEY=""
# Optional model name (default: gpt-4o-mini)
OPENAI_MODEL="gpt-4o-mini"
# Optional request timeout in seconds (default: 30)
OPENAI_TIMEOUT_S="30"

# Web search
# Optional; if set, Tavily will be used first and DDG will be fallback:
TAVILY_API_KEY=""
# Maximum search results to fetch (default: 6)
SEARCH_MAX_RESULTS="6"

# Reply formatting behavior
MAX_REPLY_ITEMS="4"
MIN_REPLY_ITEMS="2"

# Logging
LOG_LEVEL="INFO"
